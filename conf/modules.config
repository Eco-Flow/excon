/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {
    withName: 'GFFREAD' {
        publishDir = [
            path: { "${params.outdir}/gffread" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'GET_DATA' {
        publishDir = [ [
            path: { "${params.outdir}/go_files/background_gofiles" },
            mode: params.publish_dir_mode,
            pattern: "*.go.txt"
        ], [
            path: { "${params.outdir}/go_files/background_species" },
            mode: params.publish_dir_mode,
            pattern: "*.fasta"
        ] ]
    }

    withName: 'ORTHOFINDER' {
        publishDir = [
            path: { "${params.outdir}/orthofinder" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'GO_ASSIGN' {
        publishDir = [
            path: { "${params.outdir}/go" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CAFE' {
        publishDir = [
            path: { "${params.outdir}/cafe" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CAFE_GO' {
        publishDir = [
            path: { "${params.outdir}/cafe_go" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CHROMO_GO' {
        publishDir = [
            path: { "${params.outdir}/chromo_go" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CAFE_PLOT' {
        publishDir = [
            path: { "${params.outdir}/cafe_plot" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'GO_EXPANSION' {
        publishDir = [
            path: { "${params.outdir}/go_expansion" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'BUSCO_BUSCO' {
        publishDir = [
            path: { "${params.outdir}/busco" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CUSTOM_DUMPSOFTWAREVERSIONS' {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }

    withName: 'AGAT_SPSTATISTICS' {
        publishDir = [
            path: { "${params.outdir}/agat" },
            mode: params.publish_dir_mode
        ]
    }    

}
